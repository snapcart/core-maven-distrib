  <profiles>
    <profile>
      <id>snapcart</id>
      <repositories>
          <repository>
            <id>snapcart-maven-repository-releases</id>
            <name>Snapcart Releases Maven Repository</name>
            <releases>
              <enabled>true</enabled>
            </releases>
            <snapshots>
              <enabled>false</enabled>
            </snapshots>
            <url>git:releases://git@github.com:snapcart/core-maven-repository.git</url>
          </repository>
          <repository>
            <id>snapcart-maven-repository-snapshots</id>
            <name>Snapcart Snapshots Maven Repository</name>
            <releases>
              <enabled>false</enabled>
            </releases>
            <snapshots>
              <enabled>true</enabled>
            </snapshots>
            <url>git:snapshots://git@github.com:snapcart/core-maven-repository.git</url>
          </repository>
        </repositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>snapcart</activeProfile>
  </activeProfiles>

</settings>
